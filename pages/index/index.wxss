/** * 琉璃孤独棋 - 完整优化版样式
 * 核心优化：增强了棋盘凹槽感、棋子玻璃质感、落子点提示
 */

page { 
  height: 100%; 
  overflow: hidden; 
  background: #fdfaf7; 
}

.game-container { 
  height: 100vh; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center; 
}

/* --- 1. 弹窗系统 --- */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  backdrop-filter: blur(8px); /* 增加背景毛玻璃感 */
}

.rules-modal {
  background: #fff;
  width: 85%;
  border-radius: 40rpx;
  overflow: hidden; /* 确保 banner 不会超出圆角 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  box-shadow: 0 30rpx 80rpx rgba(0,0,0,0.5);
  animation: modalShow 0.3s ease-out;
}

@keyframes modalShow {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-banner { 
  width: 100%; 
  /* 方案 A：如果你希望图片更高一点，增加高度数值 */
  height: 600rpx; 
  
  /* 方案 B：或者改为自适应高度（推荐） */
  /* height: auto; */
  
  display: block; 
  margin: 0;
  
  /* 关键点：修改裁剪模式 */
  /* aspectFill 会填满容器但可能裁切边缘 */
  /* center 会对齐图片中心 */
  object-fit: cover; 
  object-position: top; /* 强制对齐图片顶部，确保人物头部显示 */
}

.modal-content {
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-title { 
  display: block; 
  text-align: center; 
  font-size: 46rpx; 
  font-weight: bold; 
  color: #5d4037; 
  margin-bottom: 20rpx; 
}

.modal-desc { 
  margin-bottom: 40rpx; 
}

.desc-line { 
  display: block; 
  font-size: 28rpx; 
  color: #795548; 
  line-height: 1.8; 
  margin-bottom: 10rpx;
}

/* --- 2. 游戏头部与得分 --- */
.header { 
  width: 90%; 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  margin-bottom: 40rpx; 
}

.score-card {
  display: flex; 
  background: #fff; 
  padding: 15rpx 40rpx; 
  border-radius: 40rpx; 
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.05);
}

.num {
  font-weight: bold;
  color: #e64340;
  margin-left: 10rpx;
  font-size: 36rpx;
}

.btn-group { display: flex; gap: 20rpx; }

.action-btn { 
  padding: 15rpx 35rpx; 
  border-radius: 40rpx; 
  font-size: 26rpx; 
  color: #fff; 
  font-weight: bold; 
  transition: all 0.2s;
}

.action-btn:active { transform: scale(0.95); opacity: 0.8; }
.undo-btn { background: #8d6e63; }
.reset-btn { background: #b3865c; }

/* --- 3. 核心棋盘视觉 --- */
.board-area {
  width: 710rpx; 
  height: 710rpx; 
  background: radial-gradient(circle, #d2a679 60%, #b3865c 100%); 
  border: 16rpx solid #b3865c;
  border-radius: 50%; 
  padding: 24rpx; 
  box-sizing: border-box;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.2), inset 0 0 30rpx rgba(0,0,0,0.1);
}

.game-board { height: 100%; display: flex; flex-direction: column; }
.board-row { display: flex; flex: 1; }

.cell { 
  flex: 1; 
  margin: 6rpx; 
  border-radius: 50%; 
  background: #4e342e; /* 凹槽深色 */
  position: relative; 
  box-shadow: inset 0 6rpx 10rpx rgba(0,0,0,0.6); /* 模拟孔洞内阴影 */
}

.cell-empty { flex: 1; margin: 6rpx; }

/* 棋子基础样式 */
.piece { 
  width: 100%; 
  height: 100%; 
  border-radius: 50%; 
  box-shadow: 0 8rpx 12rpx rgba(0,0,0,0.4); 
  position: relative;
  overflow: hidden;
  transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* 棋子高光 - 增强质感 */
.piece::before {
  content: "";
  position: absolute;
  top: 10%; left: 15%;
  width: 40%; height: 25%;
  background: rgba(255, 255, 255, 0.35);
  border-radius: 50% 100%;
}

.selected { 
  transform: scale(1.15); 
  box-shadow: 0 0 30rpx #fff, 0 10rpx 20rpx rgba(0,0,0,0.5) !important; 
  z-index: 10; 
}

/* 可落子提示圆点 */
.target-dot {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 18rpx; height: 18rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  animation: breathe 1.5s infinite;
}

@keyframes breathe {
  0%, 100% { opacity: 0.2; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 0.7; transform: translate(-50%, -50%) scale(1.3); }
}

/* --- 4. 棋子颜色库 --- */
.color-1 { background: radial-gradient(circle at 30% 30%, #ff5f6d, #b91d1d); }
.color-2 { background: radial-gradient(circle at 30% 30%, #4facfe, #0061ff); }
.color-3 { background: radial-gradient(circle at 30% 30%, #43e97b, #138a3a); }
.color-4 { background: radial-gradient(circle at 30% 30%, #fa709a, #d44d75); }
.color-5 { background: radial-gradient(circle at 30% 30%, #a18cd1, #4c00a4); }

/* --- 5. 结算与排行样式 --- */
.result-rank-icon { display: block; text-align: center; font-size: 120rpx; margin-bottom: 20rpx; }
.result-info { text-align: center; margin: 30rpx 0; font-size: 34rpx; color: #8d6e63; }

.rank-scroll {
  max-height: 400rpx;
  overflow-y: auto;
  margin: 30rpx 0;
  border-radius: 20rpx;
  background: #fdfdfd;
  padding: 10rpx;
}
/* 排行榜容器 */
.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}
/* 序号样式 */
.rank-no {
  width: 60rpx;
  font-weight: bold;
  font-style: italic;
  color: #888;
}
/* 前三名特殊处理 */
.rank-item:nth-child(1) .rank-no { color: #FFD700; font-size: 40rpx; }
.rank-item:nth-child(2) .rank-no { color: #C0C0C0; }
.rank-item:nth-child(3) .rank-no { color: #CD7F32; }

/* 玩家信息 */
.player-info {
  flex: 1;
  margin-left: 20rpx;
}
.player-name {
  font-size: 30rpx;
  color: #333;
}
.score-badge {
  background: #eef2fe;
  color: #3a5ccc;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}
/* 按钮点击态 */
.confirm-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.rank-item.header { background: #f8f9fa; font-weight: bold; border-radius: 10rpx; }
.r-count { color: #ff5722; font-weight: bold; }

.nickname-input {
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background: #f5f5f5;
  margin: 40rpx 0;
  border-radius: 20rpx;
  padding: 0 40rpx;
  text-align: left;
  font-size: 32rpx;
  border: 2rpx solid #eee;
}

.modal-btns { display: flex; gap: 20rpx; margin-top: 20rpx; }

.confirm-btn { 
  background: #b3865c; color: #fff; border-radius: 50rpx; 
  font-weight: bold; width: 100%; height: 90rpx; line-height: 90rpx;
}

.confirm-btn-small { background: #4caf50; color: #fff; flex: 2; border-radius: 50rpx; }
.cancel-btn { background: #ccc; color: #fff; flex: 1; border-radius: 50rpx; }



.empty-tip { text-align: center; padding: 40rpx; color: #999; font-size: 26rpx; }


#confettiCanvas {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99999; /* 必须比弹窗的 z-index 高 */
  pointer-events: none; /* 必须加，否则你点不到输入框 */
}
/* 弹窗整体宽度微调 */
.rank-modal-custom {
  width: 85% !important;
  background: #fdfdfd !important;
}

/* 滚动区域 */
.rank-scroll {
  height: 600rpx;
  margin-top: 30rpx;
}

/* 每一个排名长条卡片 */
.rank-card {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.03);
  transition: all 0.3s;
}

/* 前三名发光效果 */
.top-three {
  background: linear-gradient(135deg, #ffffff 0%, #fff9e6 100%);
  border: 1rpx solid #ffeeba;
}

/* 排名数字/勋章 */
.rank-number-box {
  width: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #8d6e63;
}
.medal { font-size: 44rpx; }

/* 名字和称号 */
.player-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.player-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.player-tag {
  font-size: 20rpx;
  color: #999;
  background: #f0f0f0;
  padding: 2rpx 12rpx;
  border-radius: 10rpx;
  width: fit-content;
}
.top-three .player-tag {
  background: #ffecb3;
  color: #ff8f00;
}

/* 分数区域 */
.score-section {
  text-align: right;
}
.score-val {
  font-size: 40rpx;
  font-weight: 800;
  color: #4c6ef5;
  font-family: 'Courier New', Courier, monospace;
}
.score-unit {
  font-size: 24rpx;
  color: #777;
  margin-left: 6rpx;
}

/* 按钮美化 */
.rank-btn-group {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 0 10rpx;
}

/* 返回按钮：低调灰色 */
.back-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  background: #f0f0f0 !important;
  color: #666 !important;
  font-size: 28rpx;
  border-radius: 45rpx;
  margin: 0 !important;
  padding: 0 !important;
  font-weight: normal;
}

/* 挑战按钮：依然突出 */
.restart-btn {
  transition: width 0.3s ease; /* 增加平滑过渡 */
  flex: 2;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 !important; /* 覆盖原有 margin */
  border-radius: 45rpx;
  background: linear-gradient(to right, #8d6e63, #6d4c41) !important;
}