page { height: 100%; overflow: hidden; }

.game-container {
  height: 100vh; width: 100vw;
  background: radial-gradient(circle, #f0f0f0 0%, #d1d1d1 100%);
  display: flex; flex-direction: column; align-items: center; justify-content: center;
}

/* --- 弹窗完全居中方案 --- */
.modal-overlay {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  display: flex; justify-content: center; align-items: center;
  z-index: 9999;
}

.rules-modal {
  background: #ffffff; width: 85%;
  border-radius: 40rpx; overflow: hidden;
  box-shadow: 0 30rpx 80rpx rgba(0,0,0,0.5);
  animation: popIn 0.35s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* 拿破仑图片：增加高度，并确保顶部不被切掉 */
.modal-banner {
  width: 100%;
  height: 520rpx; /* 高度增加，完美展示画面 */
  display: block;
  border-bottom: 8rpx solid #b3865c;
}

.modal-content { padding: 45rpx; text-align: center; }
.modal-title { font-size: 46rpx; font-weight: bold; color: #5d4037; display: block; margin-bottom: 30rpx; }
.modal-desc { text-align: left; margin-bottom: 45rpx; }
.desc-line { font-size: 28rpx; color: #6d4c41; line-height: 1.8; display: block; }

.confirm-btn { 
  background: #8d6e63 !important; color: white !important; 
  border-radius: 50rpx; font-weight: bold; width: 80% !important;
}

/* --- 棋盘部分保持原样 --- */
.header { display: flex; align-items: center; margin-bottom: 40rpx; gap: 30rpx; }
.score-card { background: #fff; padding: 16rpx 36rpx; border-radius: 50rpx; font-weight: bold; color: #5d4037; box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1); }
.reset-btn { background: #8d6e63; color: white; padding: 16rpx 30rpx; border-radius: 15rpx; font-size: 26rpx; }

.board-area {
  width: 92vw; height: 92vw; max-width: 680rpx; max-height: 680rpx;
  background: #d2a679; border: 18rpx solid #b3865c; border-radius: 50%;
  padding: 24rpx; box-sizing: border-box; box-shadow: 0 25rpx 60rpx rgba(0,0,0,0.3);
}
.game-board { height: 100%; display: flex; flex-direction: column; }
.board-row { display: flex; flex: 1; }
.cell { flex: 1; margin: 6rpx; border-radius: 50%; background: #5d4037; box-shadow: inset 2rpx 4rpx 10rpx rgba(0,0,0,0.5); position: relative; }
.cell-empty { flex: 1; margin: 6rpx; }

.piece { 
  width: 100%; height: 100%; border-radius: 50%; 
  box-shadow: inset 0 -8rpx 15rpx rgba(255,255,255,0.3), 0 6rpx 12rpx rgba(0,0,0,0.4); 
}
.selected { transform: scale(1.1); box-shadow: 0 0 20rpx #fff !important; z-index: 10; }

.color-1 { background: radial-gradient(circle at 35% 35%, #ff4d6d, #c9184a); }
.color-2 { background: radial-gradient(circle at 35% 35%, #00b4d8, #0077b6); }
.color-3 { background: radial-gradient(circle at 35% 35%, #70e000, #38b000); }
.color-4 { background: radial-gradient(circle at 35% 35%, #ffb703, #fb8500); }
.color-5 { background: radial-gradient(circle at 35% 35%, #bdb2ff, #9381ff); }

@keyframes popIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }
.watermark { 
  position: fixed; 
  bottom: 30rpx; 
  left: 0;           /* 配合 width: 100% 确保从屏幕左侧开始计算 */
  width: 100%;       /* 撑满屏幕宽度 */
  text-align: center; /* 文字水平居中 */
  font-size: 22rpx; 
  color: rgba(0, 0, 0, 0.2); 
  pointer-events: none; /* 确保水印不遮挡下层点击操作 */
  z-index: 1;        /* 确保在棋盘底层，不遮挡弹窗 */
}