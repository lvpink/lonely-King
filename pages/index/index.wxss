page { height: 100%; overflow: hidden; }

.game-container {
  height: 100vh; width: 100vw;
  background: radial-gradient(circle, #f0f0f0 0%, #d1d1d1 100%);
  display: flex; flex-direction: column; align-items: center; justify-content: center;
}

.modal-overlay {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  display: flex; justify-content: center; align-items: center;
  z-index: 9999;
}

.rules-modal {
  background: #ffffff; width: 85%;
  border-radius: 40rpx; overflow: hidden;
  box-shadow: 0 30rpx 80rpx rgba(0,0,0,0.5);
}

.modal-banner {
  width: 100%; height: 520rpx; display: block;
  border-bottom: 8rpx solid #b3865c;
}

.modal-content { padding: 40rpx; text-align: center; }

/* 居中标题 */
.modal-title { 
  font-size: 44rpx; font-weight: bold; color: #5d4037; 
  margin-bottom: 20rpx; display: block; text-align: center; 
}

/* 结算图标居中 */
.result-rank-icon {
  font-size: 120rpx; display: block; margin-bottom: 20rpx; text-align: center;
}

/* 结算信息文字强制居中修改 */
.result-info {
  width: 100%; display: flex; justify-content: center; margin: 20rpx 0;
}
.result-info text {
  font-size: 32rpx; color: #8d6e63; text-align: center; display: block; width: 100%;
}

.modal-desc { text-align: left; margin-bottom: 40rpx; }
.desc-line { display: block; font-size: 28rpx; color: #795548; line-height: 1.8; }

.confirm-btn {
  background: #b3865c; color: white; border-radius: 50rpx;
  font-weight: bold; width: 100%;
}

.header {
  width: 90%; display: flex; justify-content: space-between;
  align-items: center; margin-bottom: 40rpx;
}

.score-card {
  background: #fff; padding: 15rpx 30rpx; border-radius: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05); font-weight: bold;
}

.reset-btn {
  background: #b3865c; color: #fff; padding: 12rpx 24rpx;
  border-radius: 12rpx; font-size: 26rpx; font-weight: bold;
}

.board-area {
  width: 700rpx; height: 700rpx; background: #d2a679;
  border: 18rpx solid #b3865c; border-radius: 50%;
  padding: 24rpx; box-sizing: border-box;
  box-shadow: 0 25rpx 60rpx rgba(0,0,0,0.3);
}

.game-board { height: 100%; display: flex; flex-direction: column; }
.board-row { display: flex; flex: 1; }
.cell { 
  flex: 1; margin: 6rpx; border-radius: 50%; background: #5d4037;
  box-shadow: inset 2rpx 4rpx 10rpx rgba(0,0,0,0.5); position: relative;
}
.cell-empty { flex: 1; margin: 6rpx; }

.piece { 
  width: 100%; height: 100%; border-radius: 50%; 
  box-shadow: inset 0 -8rpx 15rpx rgba(255,255,255,0.3), 0 6rpx 12rpx rgba(0,0,0,0.4); 
}

.selected { transform: scale(1.1); box-shadow: 0 0 20rpx #fff !important; z-index: 10; }

.color-1 { background: radial-gradient(circle at 35% 35%, #ff4d6d, #c9184a); }
.color-2 { background: radial-gradient(circle at 35% 35%, #4facfe, #0061ff); }
.color-3 { background: radial-gradient(circle at 35% 35%, #43e97b, #138a3a); }
.color-4 { background: radial-gradient(circle at 35% 35%, #fa709a, #fee140); }
.color-5 { background: radial-gradient(circle at 35% 35%, #a18cd1, #4c00a4); }
.watermark { 
  position: fixed; 
  bottom: 30rpx; 
  left: 0;           /* 配合 width: 100% 确保从屏幕左侧开始计算 */
  width: 100%;       /* 撑满屏幕宽度 */
  text-align: center; /* 文字水平居中 */
  font-size: 22rpx; 
  color: rgba(0, 0, 0, 0.2); 
  pointer-events: none; /* 确保水印不会遮挡下层点击操作 */
  z-index: 1;        /* 确保在棋盘底层，不遮挡弹窗 */
}