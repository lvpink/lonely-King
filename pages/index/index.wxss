page { height: 100%; overflow: hidden; background: #f7f7f7; }
.game-container { height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; }

/* 弹窗核心 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  display: flex;             /* 开启 flex 布局 */
  justify-content: center;    /* 水平居中 */
  align-items: center;        /* 垂直居中 */
  z-index: 9999;
}
.rules-modal {
  background: #fff;
  width: 80%;
  border-radius: 40rpx;
  /* padding: 60rpx 40rpx; */
  box-sizing: border-box;     /* 确保 padding 不撑开宽度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
}
.modal-banner { width: 100%; height: 500rpx; display: block; margin: 0;}
/* 文字内容区域 */
.modal-content {
  width: 100%;             /* 撑开容器 */
  padding: 40rpx;          /* 给文字部分单独加间距，不影响图片 */
  box-sizing: border-box;
}

/* 居中样式修改 */
.modal-title { 
  display: block; width: 100%; text-align: center; font-size: 46rpx; 
  font-weight: bold; color: #5d4037; margin-bottom: 30rpx; 
}
.result-rank-icon { display: block; text-align: center; font-size: 120rpx; margin-bottom: 10rpx; }

.result-info {
  width: 100%; display: flex; justify-content: center; margin: 20rpx 0;
}
.result-info text {
  font-size: 34rpx; color: #8d6e63; text-align: center; width: 100%;
}

.modal-desc { text-align: left; margin-bottom: 30rpx; }
.desc-line { display: block; font-size: 28rpx; color: #795548; line-height: 1.6; }

.confirm-btn { background: #b3865c; color: #fff; border-radius: 50rpx; font-weight: bold; }

/* 顶部与按钮 */
.header { width: 90%; display: flex; justify-content: space-between; align-items: center; margin-bottom: 40rpx; }
.score-card {display: flex;          /* 开启 Flex 布局，子元素默认水平排列 */ background: #fff; padding: 15rpx 35rpx; border-radius: 40rpx; font-weight: bold; }
.num {
  font-weight: bold;
  color: #e64340;         /* 让数字颜色更醒目 */
  margin-left: 10rpx;     /* 在“剩余：”和数字之间加点间距 */
}
.btn-group { display: flex; gap: 15rpx; }
.action-btn { padding: 12rpx 28rpx; border-radius: 12rpx; font-size: 26rpx; color: #fff; font-weight: bold; }
.undo-btn { background: #8d6e63; }
.reset-btn { background: #b3865c; }

/* 棋盘视觉 */
.board-area {
  width: 700rpx; height: 700rpx; background: #d2a679; border: 16rpx solid #b3865c;
  border-radius: 50%; padding: 20rpx; box-sizing: border-box;
}
.game-board { height: 100%; display: flex; flex-direction: column; }
.board-row { display: flex; flex: 1; }
.cell { flex: 1; margin: 5rpx; border-radius: 50%; background: #5d4037; position: relative; }
.cell-empty { flex: 1; margin: 5rpx; }
.piece { width: 100%; height: 100%; border-radius: 50%; box-shadow: 0 6rpx 10rpx rgba(0,0,0,0.3); }
.selected { transform: scale(1.1); box-shadow: 0 0 15rpx #fff !important; }

/* 棋子颜色 */
.color-1 { background: radial-gradient(circle at 30% 30%, #ff5f6d, #b91d1d); }
.color-2 { background: radial-gradient(circle at 30% 30%, #4facfe, #0061ff); }
.color-3 { background: radial-gradient(circle at 30% 30%, #43e97b, #138a3a); }
.color-4 { background: radial-gradient(circle at 30% 30%, #fa709a, #fee140); }
.color-5 { background: radial-gradient(circle at 30% 30%, #a18cd1, #4c00a4); }
.watermark { 
  position: fixed; 
  bottom: 30rpx; 
  left: 0;           /* 配合 width: 100% 确保从屏幕左侧开始计算 */
  width: 100%;       /* 撑满屏幕宽度 */
  text-align: center; /* 文字水平居中 */
  font-size: 22rpx; 
  color: rgba(0, 0, 0, 0.2); 
  pointer-events: none; /* 确保水印不会遮挡下层点击操作 */
  z-index: 1;        /* 确保在棋盘底层，不遮挡弹窗 */
}
