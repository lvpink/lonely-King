/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.footer-watermark {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  text-align: center;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  pointer-events: none;
}

.double-color-text {
  position: relative;
  display: inline-block;
  font-size: 24rpx;
  font-weight: bold;
}

/* 底层文字：青色 */
.base-text {
  color: #00dbde;
}

/* 顶层文字：紫色，负责闪烁 */
.top-text {
  position: absolute;
  top: 0;
  left: 0;
  color: #fc00ff;
  /* 强制开启硬件加速 */
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  /* 呼吸动画：淡入淡出 */
  animation: flash-flow 3s ease-in-out infinite;
  -webkit-animation: flash-flow 3s ease-in-out infinite;
}

@keyframes flash-flow {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

@-webkit-keyframes flash-flow {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}